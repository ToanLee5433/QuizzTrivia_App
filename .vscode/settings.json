{
    // ==================== i18n Ally Configuration ====================
    // Đường dẫn chứa file translations
    "i18n-ally.localesPaths": [
        "public/locales"
    ],
    
    // Ngôn ngữ nguồn (source of truth)
    "i18n-ally.sourceLanguage": "vi",
    
    // Ngôn ngữ hiển thị trong editor
    "i18n-ally.displayLanguage": "vi",
    
    // Framework sử dụng
    "i18n-ally.keystyle": "nested",
    "i18n-ally.framework": "react-i18next",
    
    // Namespace pattern  
    "i18n-ally.namespace": true,
    "i18n-ally.pathMatcher": "{locale}/{namespace}.json",
    
    // Các ngôn ngữ hỗ trợ
    "i18n-ally.enabledParsers": ["json"],
    "i18n-ally.enabledFrameworks": ["react-i18next", "i18next"],
    
    // Hiển thị inline annotations
    "i18n-ally.annotations": true,
    "i18n-ally.annotationInPlace": true,
    
    // Extract key prefix
    "i18n-ally.extract.autoDetect": true,
    
    // Sort keys alphabetically
    "i18n-ally.sortKeys": true,
    
    // Keep translations in sync
    "i18n-ally.keepFulfilled": true,
    
    // Regex để tìm translation keys trong code
    "i18n-ally.regex.usageMatchAppend": [
        "t\\(['\"`]({key})['\"`]",
        "i18nKey=['\"`]({key})['\"`]",
        "\\$t\\(['\"`]({key})['\"`]"
    ]
}