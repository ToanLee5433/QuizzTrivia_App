const createMockStore = (initialState = {}) => {
  return configureStore({
    reducer: {
      auth: authSlice,
      quiz: quizSlice,
    },
    preloadedState: {
      auth: {
        user: { 
          uid: '1', 
          email: 'admin@test.com', 
          displayName: 'Admin User',
          photoURL: null,
          emailVerified: true,
          role: 'admin' as const
        },
        isAuthenticated: true,
        isLoading: false,
        error: null,
        needsRoleSelection: false,
        authChecked: true,
      },
      quiz: {
        quizzes: [],
        currentQuiz: null,
        loading: false,
        error: null,
        userResults: [],
        isLoading: false,
        connectionError: false,
        filters: {
          category: 'all',
          difficulty: undefined,
          searchTerm: '',
        },
        currentQuestionIndex: 0,
        userAnswers: {},
        timeLeft: 0,
        quizStartTime: null,
        retryCount: 0,
        lastError: null,
        isTimeWarning: false,
        totalTime: 0,
      },
      ...initialState,
    },
  });
};

const renderWithProviders = (
  ui: React.ReactElement,
  { initialState = {} } = {}
) => {
  const store = createMockStore(initialState);
  return render(
    <Provider store={store}>
      <BrowserRouter>
        {ui}
      </BrowserRouter>
    </Provider>
  );
};

