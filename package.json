    "mammoth": "^1.9.1",
    "nodemailer": "^7.0.5",
    "papaparse": "^5.5.3",
    "pdfjs-dist": "^5.4.54",
    "quill": "^2.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
