{
  "name": "quiz-trivia-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "node ./node_modules/vite/bin/vite.js",
    "build": "tsc && node ./node_modules/vite/bin/vite.js build",
    "preview": "node ./node_modules/vite/bin/vite.js preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "i18n:normalize": "cd scripts/i18n && npm run normalize",
    "i18n:compare": "cd scripts/i18n && npm run compare",
    "i18n:reverse": "cd scripts/i18n && npm run reverse-lookup",
    "i18n:extract": "cd scripts/i18n && npm run extract",
    "i18n:validate": "cd scripts/i18n && npm run validate",
    "i18n:fix": "cd scripts/i18n && npm run fix-all",
    "i18n:audit": "cd scripts/i18n && npm run full-audit",
    "test": "jest --config=jest.config.cjs --passWithNoTests",
    "test:watch": "jest --config=jest.config.cjs --watch",
    "test:coverage": "jest --config=jest.config.cjs --coverage",
    "test:ci": "jest --config=jest.config.cjs --ci --coverage --watchAll=false"
  },
