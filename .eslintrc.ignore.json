{
  "ignorePatterns": [
    "dist",
    "build",
    "node_modules",
    "*.config.js",
    "*.config.ts",
    "scripts/**/*",
    "public/**/*",
    "src/lib/genkit/**/*",
    "src/test/**/*",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    "**/*.d.ts"
  ],
  "overridePatterns": {
    "noLiteralString": [
      "src/pages/Admin/**/*",
      "src/pages/Creator/**/*",
      "src/pages/AIGeneratorPage.tsx",
      "src/features/admin/**/*",
      "src/features/creator/**/*",
      "src/shared/components/AdminStats/**/*",
      "src/shared/components/ImageUploader/**/*",
      "src/shared/components/Debug*",
      "src/lib/**/*"
    ],
    "noExplicitAny": [
      "src/services/**/*",
      "src/utils/**/*",
      "src/lib/**/*",
      "src/types/**/*"
    ]
  }
}
