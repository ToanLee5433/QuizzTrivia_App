{
  "rules": {
    "quizPresence": {
      "$quizId": {
        ".read": true,
        "users": {
          "$userId": {
            ".write": "auth != null && auth.uid == $userId"
          }
        }
      }
    },
    "status": {
      "$userId": {
        ".read": "auth != null",
        ".write": "auth != null && auth.uid == $userId",
        "state": {
          ".validate": "newData.isString() && (newData.val() == 'online' || newData.val() == 'offline' || newData.val() == 'idle')"
        },
        "lastChanged": {
          ".validate": "newData.exists()"
        }
      }
    },
    "users": {
      "$userId": {
        ".read": "auth != null",
        ".write": "auth != null && auth.uid == $userId"
      }
    },
    "games": {
      "$gameId": {
        ".read": "auth != null",
        ".write": "auth != null"
      }
    },
    "rooms": {
      "$roomId": {
        ".read": "auth != null",
        ".write": "auth != null && (!data.exists() || data.child('hostId').val() == auth.uid || !newData.exists() && data.child('hostId').val() == auth.uid)",
        
        "hostId": {
          ".validate": "newData.isString()"
        },
        
        "lastEmptyAt": {
          ".read": "auth != null",
          ".write": "auth != null",
          ".validate": "!newData.exists() || newData.isNumber()"
        },
        
        "createdAt": {
          ".validate": "newData.isNumber()"
        },
        
        "players": {
          ".read": "auth != null",
          ".indexOn": ["joinedAt", "isOnline"],
          "$playerId": {
            ".write": "auth != null && (auth.uid == $playerId || !data.exists() || data.exists())",
            ".validate": "!newData.exists() || newData.hasChildren(['id', 'name', 'score', 'isReady', 'isOnline'])",
            "id": {
              ".validate": "!newData.exists() || (newData.isString() && newData.val() == $playerId)"
            },
            "name": {
              ".validate": "!newData.exists() || (newData.isString() && newData.val().length > 0 && newData.val().length <= 50)"
            },
            "score": {
              ".validate": "!newData.exists() || (newData.isNumber() && newData.val() >= 0)"
            },
            "isReady": {
              ".validate": "!newData.exists() || newData.isBoolean()"
            },
            "isOnline": {
              ".validate": "!newData.exists() || newData.isBoolean()"
            }
          }
        },
        
        "gameState": {
          ".read": "auth != null",
          ".write": "auth != null && (root.child('rooms').child($roomId).child('hostId').val() == auth.uid || root.child('rooms').child($roomId).child('players').child(auth.uid).exists())",
          ".validate": "newData.hasChild('status')",
          "status": {
            ".validate": "newData.isString() && (newData.val() == 'waiting' || newData.val() == 'playing' || newData.val() == 'paused' || newData.val() == 'finished')"
          },
          "currentQuestion": {
            ".validate": "!newData.exists() || (newData.isNumber() && newData.val() >= 0)"
          },
          "questionStartTime": {
            ".validate": "!newData.exists() || newData.isNumber()"
          },
          "timeLeft": {
            ".validate": "!newData.exists() || (newData.isNumber() && newData.val() >= 0)"
          },
          "pausedAt": {
            ".validate": "!newData.exists() || newData.isNumber()"
          },
          "finishedAt": {
            ".validate": "!newData.exists() || newData.isNumber()"
          }
        },
        
        "answers": {
          "$questionIndex": {
            "$userId": {
              ".read": "auth != null",
              ".write": "auth != null && auth.uid == $userId && !data.exists() && root.child('rooms').child($roomId).child('players').child($userId).child('role').val() != 'spectator'",
              ".validate": "newData.hasChildren(['questionId', 'answer', 'timeSpent', 'isCorrect', 'points', 'submittedAt'])",
              "questionId": {
                ".validate": "newData.isString()"
              },
              "answer": {
                ".validate": "newData.isNumber() && newData.val() >= 0"
              },
              "timeSpent": {
                ".validate": "newData.isNumber() && newData.val() >= 0 && newData.val() <= 120000"
              },
              "isCorrect": {
                ".validate": "newData.isBoolean()"
              },
              "points": {
                ".validate": "newData.isNumber() && newData.val() >= 0"
              },
              "submittedAt": {
                ".validate": "newData.isNumber() && newData.val() <= now + 5000"
              }
            }
          }
        },
        
        "leaderboard": {
          ".read": "auth != null",
          ".write": "auth != null && root.child('rooms').child($roomId).child('hostId').val() == auth.uid",
          ".indexOn": ["score"],
          "$index": {
            ".validate": "newData.hasChildren(['userId', 'name', 'score'])",
            "userId": {
              ".validate": "newData.isString()"
            },
            "name": {
              ".validate": "newData.isString()"
            },
            "score": {
              ".validate": "newData.isNumber() && newData.val() >= 0"
            },
            "correctAnswers": {
              ".validate": "!newData.exists() || (newData.isNumber() && newData.val() >= 0)"
            },
            "totalAnswers": {
              ".validate": "!newData.exists() || (newData.isNumber() && newData.val() >= 0)"
            },
            "photoURL": {
              ".validate": "!newData.exists() || newData.isString()"
            }
          }
        },
        
        "submissions": {
          "$userId": {
            ".read": "auth != null && auth.uid === $userId",
            ".write": "auth != null && auth.uid === $userId"
          }
        },
        
        "presence": {
          "$userId": {
            ".read": "auth != null",
            ".write": "auth != null && auth.uid == $userId",
            ".validate": "newData.hasChildren(['isOnline', 'lastSeen', 'username'])",
            "isOnline": {
              ".validate": "newData.isBoolean()"
            },
            "lastSeen": {
              ".validate": "newData.isNumber()"
            },
            "username": {
              ".validate": "newData.isString() && newData.val().length > 0 && newData.val().length <= 50"
            }
          }
        },
        
        "playerStatuses": {
          "$userId": {
            ".read": "auth != null",
            ".write": "auth != null && auth.uid == $userId",
            ".validate": "newData.hasChildren(['isReady', 'updatedAt'])",
            "isReady": {
              ".validate": "newData.isBoolean()"
            },
            "updatedAt": {
              ".validate": "newData.isNumber()"
            }
          }
        },
        
        "game": {
          ".read": "auth != null",
          ".write": "auth != null",
          "timer": {
            ".validate": "newData.hasChildren(['timeLeft', 'isRunning', 'updatedAt'])",
            "timeLeft": {
              ".validate": "newData.isNumber() && newData.val() >= 0"
            },
            "isRunning": {
              ".validate": "newData.isBoolean()"
            },
            "updatedAt": {
              ".validate": "newData.isNumber()"
            }
          },
          "currentQuestion": {
            ".validate": "newData.isNumber() && newData.val() >= 0"
          },
          "updatedAt": {
            ".validate": "newData.isNumber()"
          }
        },
        
        "answerProgress": {
          "$userId": {
            ".read": "auth != null",
            ".write": "auth != null && auth.uid == $userId",
            ".validate": "newData.hasChildren(['hasAnswered', 'answeredAt'])",
            "hasAnswered": {
              ".validate": "newData.isBoolean()"
            },
            "answeredAt": {
              ".validate": "newData.isNumber()"
            }
          }
        },
        
        "chat": {
          ".read": "auth != null",
          "messages": {
            ".indexOn": ["timestamp"],
            "$messageId": {
              ".write": "auth != null",
              ".validate": "newData.child('userId').val() == auth.uid && newData.child('username').isString() && newData.child('message').isString() && newData.child('timestamp').isNumber()",
              "userId": {
                ".validate": "newData.isString() && newData.val() == auth.uid"
              },
              "username": {
                ".validate": "newData.isString() && newData.val().length > 0 && newData.val().length <= 50"
              },
              "message": {
                ".validate": "newData.isString() && newData.val().length > 0 && newData.val().length <= 500"
              },
              "timestamp": {
                ".validate": "newData.isNumber()"
              },
              "type": {
                ".validate": "!newData.exists() || (newData.isString() && (newData.val() == 'user' || newData.val() == 'system' || newData.val() == 'announcement'))"
              },
              "photoURL": {
                ".validate": "!newData.exists() || newData.isString()"
              }
            },
            "typing": {
              "$userId": {
                ".read": "auth != null",
                ".write": "auth != null && auth.uid == $userId"
              }
            }
          }
        },
        
        "sharedScreen": {
          ".read": "auth != null",
          ".write": "auth != null && root.child('rooms').child($roomId).child('hostId').val() == auth.uid",
          ".validate": "newData.hasChildren(['type']) && (newData.child('type').val() == 'empty' || newData.child('type').val() == 'youtube' || newData.child('type').val() == 'webpage')",
          "type": {
            ".validate": "newData.isString() && (newData.val() == 'empty' || newData.val() == 'youtube' || newData.val() == 'webpage')"
          },
          "url": {
            ".validate": "!newData.exists() || newData.isString()"
          },
          "videoId": {
            ".validate": "!newData.exists() || newData.isString()"
          },
          "timestamp": {
            ".validate": "!newData.exists() || newData.isNumber()"
          },
          "isPlaying": {
            ".validate": "!newData.exists() || newData.isBoolean()"
          },
          "title": {
            ".validate": "!newData.exists() || newData.isString()"
          },
          "updatedAt": {
            ".validate": "!newData.exists() || newData.isNumber()"
          },
          "updatedBy": {
            ".validate": "!newData.exists() || (newData.isString() && newData.val() == auth.uid)"
          }
        }
      }
    }
  }
}
