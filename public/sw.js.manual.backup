/* eslint-disable no-undef */
// Service Worker for Quiz Trivia App - Offline Support
// ðŸ”¥ UPGRADED: Now caches ALL chunks (including lazy-loaded) for true offline playback
const CACHE_NAME = 'quiz-trivia-v1.3.0'; // Bumped version to force update
const APP_SHELL = [
  '/',
  '/index.html',
  '/manifest.json',
  '/logo.svg'
];

// ðŸ”¥ CRITICAL: Track which chunks we've already cached to avoid duplicates
const cachedChunks = new Set();

// ðŸ”¥ NEW: Fetch and cache all chunks during install (PRECACHING)
async function precacheAllChunks(cache) {
  try {
    // Fetch the index.html to get all chunk references
    const response = await fetch('/index.html');
    const html = await response.text();
    
    // Extract all JS and CSS file paths from HTML
    const assetRegex = /<script[^>]+src="([^"]+)"[^>]*>|<link[^>]+href="([^"]+\.css)"[^>]*>/g;
    const assets = [];
    let match;
    
    while ((match = assetRegex.exec(html)) !== null) {
      const asset = match[1] || match[2];
      if (asset && (asset.includes('.js') || asset.includes('.css'))) {
        assets.push(asset);
      }
    }
    
    console.log('[SW] Precaching chunks:', assets.length);
    
    // Cache all found assets
    for (const asset of assets) {
      try {
        await cache.add(asset);
        cachedChunks.add(asset);
        console.log('[SW] âœ“ Precached:', asset);
      } catch (err) {
        console.warn('[SW] Failed to precache:', asset, err);
      }
    }
    
    return assets.length;
  } catch (error) {
    console.error('[SW] Precaching failed:', error);
    return 0;
  }
}

// Install - cache app shell + ALL chunks for true offline support
self.addEventListener('install', (event) => {
  console.log('[SW] Installing v1.3.0 - TRUE OFFLINE support with precaching...');
  event.waitUntil(
    caches.open(CACHE_NAME).then(async (cache) => {
      // 1. Cache app shell first (fast)
      console.log('[SW] Caching app shell');
      await cache.addAll(APP_SHELL).catch(err => {
        console.warn('[SW] Cache failed for some assets:', err);
      });
      
      // 2. ðŸ”¥ CRITICAL: Precache ALL chunks (including lazy-loaded)
      const cachedCount = await precacheAllChunks(cache);
      console.log('[SW] âœ… Precached', cachedCount, 'chunks - Ready for offline!');
    })
  );
  self.skipWaiting(); // Activate immediately
});

// Activate - cleanup old caches
self.addEventListener('activate', (event) => {
  console.log('[SW] Activating...');
  event.waitUntil(
    caches.keys().then((cacheNames) => {
      return Promise.all(
        cacheNames.map((cacheName) => {
          if (cacheName !== CACHE_NAME) {
            console.log('[SW] Deleting old cache:', cacheName);
            return caches.delete(cacheName);
          }
        })
      );
    })
  );
  self.clients.claim();
});

// Fetch - Cache-First for static assets, Network-First for others
self.addEventListener('fetch', (event) => {
  if (event.request.method !== 'GET') return;

  const url = new URL(event.request.url);
  
  // âœ… FIXED: Skip Chrome extensions and unsupported URL schemes
  if (
    url.protocol === 'chrome-extension:' ||
    url.protocol === 'chrome:' ||
    url.protocol === 'about:' ||
    url.protocol === 'data:' ||
    url.hostname.includes('extension')
  ) {
    return;
  }
  
  // Skip Firebase/API requests (let SDK handle)
  if (
    url.hostname.includes('firebaseio.com') ||
    url.hostname.includes('firestore.googleapis.com') ||
    url.hostname.includes('googleapis.com') ||
    url.hostname.includes('firebase')
  ) {
    return;
  }

  // Check if this is a static asset (JS, CSS, images, fonts)
  const isStaticAsset = 
    event.request.url.includes('/assets/') ||
    event.request.url.includes('.js') ||
    event.request.url.includes('.css') ||
    event.request.url.includes('.png') ||
    event.request.url.includes('.jpg') ||
    event.request.url.includes('.svg') ||
    event.request.url.includes('.woff') ||
    event.request.url.includes('.ttf');

  // âœ… CACHE-FIRST for static assets (JS chunks, CSS, images)
  if (isStaticAsset) {
    event.respondWith(
      caches.match(event.request).then((cachedResponse) => {
        if (cachedResponse) {
          // ðŸ”¥ CRITICAL: Return cached version immediately (TRUE OFFLINE)
          console.log('[SW] âœ“ Serving from cache:', url.pathname);
          return cachedResponse;
        }
        
        // Not in cache, fetch from network and cache it
        return fetch(event.request).then((response) => {
          if (response && response.status === 200) {
            const responseToCache = response.clone();
            
            // ðŸ”¥ AGGRESSIVE CACHING: Cache ALL JS chunks (including lazy-loaded)
            caches.open(CACHE_NAME).then((cache) => {
              cache.put(event.request, responseToCache);
              
              // Track cached chunks
              if (event.request.url.includes('.js')) {
                cachedChunks.add(event.request.url);
                console.log('[SW] âœ“ Cached JS chunk:', url.pathname);
              }
            });
          }
          return response;
        }).catch((error) => {
          console.error('[SW] âŒ Failed to fetch (OFFLINE):', event.request.url, error);
          
          // ðŸ”¥ CRITICAL ERROR: This is where offline quiz fails
          // The QuizPage chunk was never cached because user didn't visit it before going offline
          return new Response(
            JSON.stringify({
              error: 'Offline - Resource not cached',
              url: event.request.url,
              help: 'This file was not cached. Please visit this page once while online.'
            }),
            { 
              status: 503,
              headers: { 'Content-Type': 'application/json' }
            }
          );
        });
      })
    );
  } 
  // âœ… NETWORK-FIRST for HTML and API
  else {
    event.respondWith(
      fetch(event.request)
        .then((response) => {
          // Cache HTML pages on successful fetch
          if (response && response.status === 200 && event.request.mode === 'navigate') {
            const responseToCache = response.clone();
            caches.open(CACHE_NAME).then((cache) => {
              cache.put(event.request, responseToCache);
            });
          }
          return response;
        })
        .catch(() => {
          // Network failed, try cache
          return caches.match(event.request).then((response) => {
            if (response) {
              return response;
            }
            // Return offline page for navigation
            if (event.request.mode === 'navigate') {
              return caches.match('/index.html');
            }
          });
        })
    );
  }
});

// Background sync for offline actions
self.addEventListener('sync', (event) => {
  console.log('[SW] Background sync:', event.tag);
  if (event.tag === 'sync-offline-actions') {
    event.waitUntil(
      self.clients.matchAll().then((clients) => {
        clients.forEach((client) => {
          client.postMessage({ type: 'SYNC_OFFLINE_ACTIONS' });
        });
      })
    );
  }
});
