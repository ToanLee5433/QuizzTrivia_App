{
  "name": "quiz-i18n-automation",
  "version": "1.0.0",
  "description": "Comprehensive i18n automation toolkit for QuizTrivia App",
  "type": "module",
  "scripts": {
    "scan": "node i18n-scanner.mjs",
    "extract": "node i18n-scanner.mjs extract",
    "validate": "node i18n-scanner.mjs validate",
    "fix": "node i18n-scanner.mjs fix",
    "sync": "node i18n-scanner.mjs sync",
    "translate": "node translate-missing.mjs translate",
    "translate-report": "node translate-missing.mjs report",
    "translate-all": "node translate-missing.mjs all",
    "update-components": "node update-components.mjs update",
    "component-report": "node update-components.mjs report",
    "component-all": "node update-components.mjs all",
    "full-audit": "npm run validate && npm run component-report && npm run translate-report",
    "fix-all": "npm run fix && npm run update-components && npm run translate",
    "setup": "npm install && node setup-workflow.mjs",
    "dev": "npm run scan -- --watch",
    "ci": "npm run validate -- --strict && npm run component-report"
  },
  "keywords": [
    "i18n",
    "internationalization",
    "react",
    "automation",
    "translation"
  ],
  "author": "QuizTrivia Team",
  "license": "MIT",
  "dependencies": {
    "fs-extra": "^11.1.1",
    "glob": "^10.3.10",
    "acorn": "^8.11.2",
    "acorn-walk": "^8.3.0",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "chokidar": "^3.5.3"
  },
  "devDependencies": {
    "@types/node": "^20.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
